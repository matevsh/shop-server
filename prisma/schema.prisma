// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  name         String         @unique
  keyString    String
  isAdmin      Boolean        @default(false)
  Log          Log[]
  RefreshToken RefreshToken[]
  Shop         Shop[]
}

model Shop {
  id          String    @id @default(uuid())
  name        String
  imageBase64 String?
  createdAt   DateTime  @default(now())
  deletedAt   DateTime?
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  product     Product[]
}

model Product {
  id          String    @id @default(uuid())
  title       String
  description String    @db.Text
  price       Int
  imageBase64 String?
  createdAt   DateTime  @default(now())
  deletedAt   DateTime?
  shop        Shop?     @relation(fields: [shopId], references: [id])
  shopId      String?
}

model Log {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  error     Boolean
  name      String
  message   String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model RefreshToken {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String   @unique
  ip        String
  enabled   Boolean  @default(true)
}
